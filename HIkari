    # HikariCP (default connection pool)
    hikari:
      maximum-pool-size: 10         # Max number of connections in the pool
      minimum-idle: 5               # Minimum number of idle connections
      idle-timeout: 30000           # Max idle time before a connection is removed (in ms)
      connection-timeout: 20000     # Max time to wait for a connection from the pool (in ms)
      max-lifetime: 1800000         # Max lifetime of a connection (in ms)
      pool-name: MyOraclePool       # Optional: name the pool for easier debugging
